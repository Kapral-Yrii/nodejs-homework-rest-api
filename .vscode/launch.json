{"version": "0.2.0",
"configurations": [

    {
        "name": "Launch via npm",
        "type": "pwa-node",
        "request": "launch",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "runtimeExecutable": "npm",
        "runtimeArgs": [
            "run-script",
            "start"
        ]
    },
    {
        "type": "pwa-node",
        "request": "launch",
        "name": "Launch Program",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "program": "${workspaceFolder}\\bin\\server.js"
    }
]
}